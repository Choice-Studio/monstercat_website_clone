---
export interface Props {
  songNumber?: string;
  songName?: string;
  songArtist?: string;
  songLength?: string;
}

const { songNumber } = Astro.props as Props;
const { songName } = Astro.props as Props;
const { songArtist = "Conroe" } = Astro.props as Props;
const { songLength } = Astro.props as Props;
---



<div class="flex w-full h-28 justify-between items-center">
  <p class=" text-white font-size-18">
    {songNumber}
  </p>
  <i class="fa-solid fa-play font-size-20 text-white font-size-18 cursor-pointer"></i>
  <div class="flex flex-col justify-center w-8/12">
    <strong class="capitalized text-white font-size-18 font-semibold">
      {songName}
    </strong>
    <p class="capitalized text-white font-size-14 font-semibold">
      {songArtist}
    </p>
  </div>
  <p class="text-white font-size-18">
    {songLength}
  </p>
  <i class="fa-solid fa-share-nodes text-white font-size-18 cursor-pointer"></i>
</div>