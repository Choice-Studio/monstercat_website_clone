---
// Global SCSS
import '../sass/global/global.scss';

// Global Layouts
import Header from '../layouts/Header.astro';
import Footer from '../layouts/Footer.astro';



export interface Props {
  title?: string;
}

const { title = "Level Days - Monstercat" } = Astro.props as Props;

---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ==== Font Awesome Icon (optional) ==== -->
    <script src="https://kit.fontawesome.com/c735b8632d.js" crossorigin="anonymous"></script>

    <!-- ==== SEO ==== -->
    <title>{title}</title>
    <meta name="description" content="A template Astro JS site.">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="Jacob Carter">
    <!-- ===  Favicon [This has to be an SVG] === -->
    <link rel="icon" type="image/svg+xml" href="/assets/images/branding/monstercat-logo.png" />

    
  </head>
  <body class="bg-black">

    <!-- 'Skip to main content' button for accessability -->
    <a href="#main-content" class="skip-main-content">
      Skip to main content
    </a> 
   
    <Header />

    <!-- === Main Content === -->
    <main>
     <article id="main-content">   
       
       <slot />

     </article>
    </main>

    <Footer />

  </body>
</html>